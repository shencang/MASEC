<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@mipmap/bg2">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/modify"
        android:textSize="40sp"
        android:layout_gravity="center"
        android:gravity="center"
        android:textColor="#FFFFFF"
        />

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TableRow android:paddingTop="20sp">
            <TextView
                android:text="@string/id_mh"
                android:textSize="20sp"
                android:textColor="#ffffff"/>
            <TextView
                android:textSize="20sp"
                android:id="@+id/showIdTv_mod"
                android:textColor="#ffffff"
                android:layout_weight="1"/>
        </TableRow>
        <TableRow android:paddingTop="20sp">
            <TextView
                android:text="@string/theme_mh"
                android:textSize="20sp"
                android:textColor="#ffffff"/>
            <EditText
                android:textSize="20sp"
                android:id="@+id/modThemeEt"
                android:textColor="#ffffff"
                android:layout_weight="1"/>
        </TableRow>
        <TableRow android:paddingTop="20sp"
            android:paddingBottom="200sp">
            <TextView
                android:text="@string/content_mh"
                android:textSize="20sp"
                android:textColor="#ffffff"/>
            <EditText
                android:textSize="20sp"
                android:id="@+id/modContentEt"
                android:textColor="#ffffff"
                android:layout_weight="1"/>
        </TableRow>
        <TableRow android:paddingTop="20sp">
            <Button
                android:id="@+id/modifyDateBtn"
                android:text="@string/date_mh"
                android:textSize="20sp"
                />
            <EditText
                android:textSize="20sp"
                android:id="@+id/modDateEt"
                android:textColor="#ffffff"
                android:layout_weight="1"/>
        </TableRow>
    </TableLayout>

</LinearLayout>